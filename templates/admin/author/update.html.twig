{% extends 'base.html.twig' %}

{% block title %}Modifier un Auteur{% endblock %}

{% block main %}

<h2>Modifier les donn√©es d'un auteur</h2>

<form method="POST">
  <div>
    <label for="name">Nom: </label>
    <input type="text" name="name" id="name" value="{{ author.name }}">
  </div>
  <div>
    <label for="description">Description: </label>
    <textarea name="description" id="description" cols="30" rows="10">{{ author.description }}</textarea>
  </div>
  <div>
    <label for="imageUrl">Image: </label>
    <input type="text" name="imageUrl" id="imageUrl" value="{{ author.imageUrl }}">
  </div>
  <button type="submit">Modifier</button>
  <button><a href="{{ path('app_admin_author_delete', {'id': author.id}) }}">Supprimer</a></button>
</form>


{% endblock %}