{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block main %}

<h2>Catégorie : {{ category.name }}</h2>

  {% for book in books %}
    <div>
      <li>Titre : {{ book.title }}</li>
    </div>
    <div>
      <li>Auteur : {{ book.author.name }}</li>
    </div>
    <div>
      <button type="submit"><a href="{{ path('app_front_book', {id: book.id}) }}">Voir</a></button>
    </div>
  {% endfor %}

{% endblock %}